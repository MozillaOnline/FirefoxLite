<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotlist_item_root_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/hotlist_item_img_fav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_globe" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- We need singleLine to make things work correctly on 5.0 devices -->
        <TextView
            android:id="@+id/hotlist_item_text_main"
            style="@style/DownloadListMainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorDownloadText"
            android:textSize="14sp"
            tools:ignore="Deprecation" />

        <!-- We need singleLine to make things work correctly on 5.0 devices -->
        <TextView
            tools:ignore="Deprecation"
            android:id="@+id/hotlist_item_text_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/colorDownloadSubText"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>