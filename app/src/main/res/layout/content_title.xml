<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/content_header_rootview"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="36dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="10dp"
            android:text="News from Tepintehui"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/content_header_title" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/content_header_title"
            android:layout_gravity="right"
            android:layout_toEndOf="@+id/content_header_title"
            android:background="@color/sharedColorAppPaletteWhite"
            android:id="@+id/content_header_button"
            android:src="@drawable/menu_settings" />


</RelativeLayout>